@model ZenBlog.Models.Categories

@{
    ViewData["title"] = "Edit";
}

<h4>Update Categories information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriesId" />
            <div class="form-group">
                <label class="form-label" asp-for="CategoriesName">Name:</label>
                <input asp-for="CategoriesName" class="form-control" />
                <span asp-validation-for="CategoriesName" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">List Categories</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");};
}