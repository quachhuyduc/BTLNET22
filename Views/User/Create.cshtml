@{
  string userID = Guid.NewGuid().ToString();
}
<h2 style="margin-bottom: 36px">Add a User</h2>
<form asp-action="Create" method="post">
    <<div class="mb-3">
      <label for="user_Id">UserID:</label>
      <input type="text" class="form-control" id="user_Id" placeholder="Enter user ID" name="UserId">
    </div>
    <div class="mb-3">
      <label for="user_name">UserName:</label>
      <input type="text" class="form-control" id="user_name" placeholder="Enter user name" name="UserName">
    </div>
    <div class="mb-3">
      <label for="password">Password:</label>
      <input type="text" class="form-control" id="password" placeholder="Enter password" name="Password">
    </div>
    <div class="mb-3">
      <label for="user_comment">UserComment:</label>
      <input type="text" class="form-control" id="user_comment" placeholder="Enter Comment" name="UserComment">
    </div>
    <div class="mb-3">
      <label for="day_join">DayJoin:</label>
      <input type="text" class="form-control" id="day_join" placeholder="Enter day join" name="DayJoin">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-success" asp-action="Index">List Users</a>
    </div>
</form>

   


